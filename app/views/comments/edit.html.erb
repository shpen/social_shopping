<div class="col-sm-6 col-sm-push-3">
  <h1>Editing Comment</h1>

  <%= render 'form' %>

  <%= link_to request.referrer || root_url do %>
    <button class ="btn btn-info btn-wide">Cancel</button>
  <% end %>

  <%= link_to @comment, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <button class ="btn btn-danger btn-wide">Delete</button>
  <% end %>
</div>