<form action="<%= request.path %>" role="search" data-remote="true">
  <div class="input-group input-group-sm ui-front">
    <%= hidden_field_tag 'ajax_target', param %>
    <%= autocomplete_field_tag param, params[param], autocomplete_tag_name_questions_path, class: 'form-control' %>
    <div class="input-group-btn">
      <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
</form>