<% if !defined? @params then @params = {} end %>
<%= if highlight then link_to "Clear", questions_path(@params.merge(tag: nil)), class: "btn btn-primary btn-xs" end %>
<%= raw(tags.map { |tag| link_to(tag, questions_path(@params.merge(tag: tag)), class: "btn btn-default btn-xs #{'active' if tag == highlight}") }.join(" ")) %>