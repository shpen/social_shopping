<div class="question" id="question-<%= question.id %>">
  <div class="panel-heading">
    <%= link_to question_path(question) do %>
      <h3 class="panel-title"><%= question.title %></h3>
    <% end %>
  </div>
  <div class="panel-body">
    <%= render "shared/vote", object: question %>
    <%= question.description %>
  </div>
  <div class="tag-list"><%= render "shared/tag_list", object: question.tag_list %></div>
  <div class="timestamp">
    <% if current_user == question.user %>
      <%= link_to 'Edit', edit_question_path(question), class: "btn btn-info btn-xs" %>
    <% end %>

    Posted <%= time_ago_in_words(question.created_at) %> ago by <%= link_to question.user.username, user_path(question.user) %>.
  </div>
</div>