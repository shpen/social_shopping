<%= render @question %>

<% if current_user != @question.user %>
  <p><%= link_to 'Submit Answer', new_question_answer_path(@question), class: "btn btn-primary" %></p>
<% else %>
  <a href="http://www.facebook.com/dialog/send?app_id=1425246721117641&link=<%= request.original_url %>&redirect_uri=<%= request.original_url %>">
    Share to Facebook
  </a>
<% end %>

<div id="answers" class="loading-container">
  <%= render 'shared/paged_sorted_list', path_method: lambda { |params| question_path(@question, params) }, sort: :sort, paginatable: @answers, paginate_param_name: :page %>
</div>