<div class="row">
  <aside>
    <section class="user_info">
      <h1>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
</div>

<div class="row">
  <div class="col-sm-6">
    <% if @user.questions.any? %>
      <h3>Questions (<%= @user.questions.count %>)</h3>
      <div class="questions">
        <%= render @questions %>
      </div>
      <%= will_paginate @questions, param_name: 'question_page' %>
    <% end %>
  </div>

  <div class="col-sm-6">
    <% if @user.answers.any? %>
      <h3>Answers (<%= @user.answers.count %>)</h3>
      <div class="questions">
        <%= render @answers %>
      </div>
      <%= will_paginate @answers, param_name: 'answer_page' %>
    <% end %>
  </div>
</div>